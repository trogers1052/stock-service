# Server Configuration
SERVER_PORT=8081
SERVER_HOST=0.0.0.0

# Database Configuration (PostgreSQL)
# For local development connecting to Docker containers
DB_HOST=localhost
DB_PORT=5432
DB_USER=trader
DB_PASSWORD=trader5
DB_NAME=trading_platform
DB_SSLMODE=disable

# For migrations (local development)
DB_LOCAL=postgres://trader:trader5@localhost:5432/trading_platform?sslmode=disable

# Kafka/Redpanda Configuration
# Use localhost:19092 for external access from host machine
# Use redpanda:9092 when running inside Docker network
KAFKA_BROKERS=localhost:19092
KAFKA_TOPIC=stock-events

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

